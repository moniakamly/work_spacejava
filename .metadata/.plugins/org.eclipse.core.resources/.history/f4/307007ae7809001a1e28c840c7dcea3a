package fractions;

public class Fraction {
	
	private int n; // le numérateur
	private int d; // le dénominateur
	private double fraction; 
	
	
	/*
	 * Les constructeurs 
	 */

	public Fraction() {
		this.fraction = 0/1;
	}
	
	public Fraction(int n) {
		this.fraction = n/1; 
	}
	
	public Fraction(int n, int d) {
		this.n=n; 
		this.d=d; 
		this.fraction = n/d; 
	}
	
	public Fraction(String s) {
		this.n =Integer.parseInt(s.substring(0, s.indexOf("/")));
		this.d =Integer.parseInt(s.substring(s.indexOf("/")+1,s.length()));
		this.fraction= (double) this.n/this.d; 
	}
	

	
	
	
	
	
	public static void main(String[] args) {
		Fraction f = new Fraction(1,5);
		System.out.println(f.n);
		System.out.println(7/3);
		System.out.println(f.fraction);
	}

}
